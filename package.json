{
    "name": "course-server",
    "version": "0.0.1",
    "description": "course server",
    "author": "Elieder Gomes",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "dev": "cross-env NODE_ENV=dev nest start --watch",
        "debug": "nest start --debug --watch",
        "start": "nest start",
        "lint:app": "eslint \"./src/**/*.ts\" --fix",
        "lint:tests": "eslint \"./__test__/**/*.ts\" --fix",
        "format": "prettier --write \"./src/**/*.ts\" \"./__test__/**/*.ts\"",
        "test": "jest --runInBand",
        "test:watch": "yarn test --watch",
        "test:cov": "yarn test --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
        "migration:create": "yarn typeorm migration:create ./src/infrastructure/database/migrations/new-migration",
        "migration:generate": "yarn typeorm migration:generate -p -d ./src/infrastructure/database/config/datasource.ts ./src/infrastructure/database/migrations/new-migration",
        "migration:run": "yarn typeorm migration:run -d ./src/infrastructure/database/config/datasource.ts",
        "docker:db": "docker run --name course-db -e POSTGRES_PASSWORD=postgres -e POSTGRES_DB=course_db -p 5432:5432 -d postgres",
        "docker:build": "docker build -t api .",
        "docker:run": "docker run -p 3001:3001 -d api"
    },
    "dependencies": {
        "@faker-js/faker": "^6.3.1",
        "@nestjs/common": "^8.0.0",
        "@nestjs/config": "^2.0.0",
        "@nestjs/core": "^8.0.0",
        "@nestjs/jwt": "^8.0.0",
        "@nestjs/passport": "^8.2.1",
        "@nestjs/platform-express": "^8.0.0",
        "@nestjs/swagger": "^5.2.1",
        "@nestjs/terminus": "^8.0.6",
        "@nestjs/typeorm": "^8.0.3",
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "cookie-parser": "^1.4.6",
        "luxon": "^2.3.2",
        "passport": "^0.5.2",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "pg": "^8.7.3",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0",
        "swagger-ui-express": "^4.4.0",
        "typeorm": "^0.3.6"
    },
    "devDependencies": {
        "@nestjs/cli": "^8.0.0",
        "@nestjs/schematics": "^8.0.0",
        "@nestjs/testing": "^8.0.0",
        "@types/bcryptjs": "^2.4.2",
        "@types/express": "^4.17.13",
        "@types/jest": "27.4.0",
        "@types/luxon": "^2.3.2",
        "@types/node": "^16.0.0",
        "@types/passport-jwt": "^3.0.6",
        "@types/passport-local": "^1.0.34",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "cross-env": "^7.0.3",
        "dotenv": "^16.0.1",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.2.5",
        "prettier": "^2.3.2",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.3",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.7.0",
        "tsconfig-paths": "^4.0.0",
        "typescript": "^4.3.5"
    }
}
